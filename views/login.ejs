<%- include('partials/nav') %> <!-- Make sure this path is correct -->
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login - Sendmate</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body class="bg-gray-500 min-h-screen">
        <div class="flex items-center justify-center h-screen">
            <div class="bg-white shadow-md rounded-lg p-8 max-w-md w-full">
                <h2 class="text-2xl font-bold text-center text-blue-600 mb-6">Login to Sendmate</h2>

                <!-- Display error message if it exists -->
                <% if (typeof error !=='undefined' && error) { %>
                    <p class="text-red-500 text-center mb-4">
                        <%= error %>
                    </p>
                    <% } %>

                        <form action="/api/auth/login" method="POST">
                            <div class="mb-4">
                                <label for="email" class="block text-gray-700 font-semibold mb-2">Email:</label>
                                <input type="email" id="email" name="email" required placeholder="Enter your email"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200">
                            </div>
                            <div class="mb-6">
                                <label for="password" class="block text-gray-700 font-semibold mb-2">Password:</label>
                                <input type="password" id="password" name="password" required
                                    placeholder="Enter your password"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200">
                            </div>
                            <button type="submit"
                                class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200">
                                Login
                            </button>
                        </form>

                        <p class="mt-4 text-center text-gray-600">Don't have an account? <a href="/register"
                                class="text-blue-600 hover:underline">Register here</a>.</p>
            </div>
        </div>

        <%- include('partials/footer') %> <!-- Make sure this path is correct -->
    </body>

    </html>